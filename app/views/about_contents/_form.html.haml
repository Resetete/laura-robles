= form_for @content do |f|
  %h3 Part 1
  .form-group
    = f.text_field :part_1_en
    = f.text_field :part_1_es 
    = f.text_field :part_1_de

  %h3 Part 2
  .form-group
    = f.text_field :part_2_en
    = f.text_field :part_2_es
    = f.text_field :part_2_de

  .form-check.form-switch
    = f.check_box :active, class: 'form-check-input', id: 'flexSwitchCheckDefault'
    = f.label 'Should be used?', class: 'form-check-label', for: 'flexSwitchCheckDefault'

  = f.submit